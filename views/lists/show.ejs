<style>

.cardcontainer {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin: 50px 0px 20px 0px ;
}    
.card {
 width: 190px;
 height: 254px;
 position: relative;
 background: #f5f5f5;
 transition: box-shadow .3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
 margin: 30px;
}

.card-img {
 position: absolute;
 height: 100%;
 width: 100%;
 /* background-color: #fffafa; */
}

.card-info {
 position: absolute;
 width: 100%;
 bottom: 0;
 padding: 1rem;
 display: flex;
 align-items: flex-end;
 justify-content: space-between;
}

.card-icon {
 opacity: 0;
 transform: translateX(-20%);
 width: 2em;
 height: 2em;
 transition: all .3s ease-in-out;
}

svg {
 --size: 20px;
 width: var(--size);
 height: var(--size);
}

/*Text*/
p {
 line-height: 100%;
}

.text-title {
 color: #000000;
 font-weight: 900;
 font-size: 18px;
}

.text-subtitle {
 color: rgb(24, 24, 24);
 font-weight: 500;
 font-size: 12px;
}

/*Hover*/
.card:hover {
 box-shadow: 0 10px 20px 4px rgba(35, 35, 35, .1);
}

.card:hover .card-icon {
 opacity: 1;
 transform: translateX(20%);
}
</style>



<!-- ====================================================================== -->



<div class="cardcontainer">

    <% list.forEach(element => { %>
  <div class="card"  style="background-image: url('/images/<%= element.image %>');">
    <div class="card-img">
 
    </div>
      <div class="card-info" >
        <div class="card-text">
          <p class="text-title"><%= element.dramaName%></p>
          <p class="text-subtitle">Currently Watching</p>
        </div>
        <div class="card-icon">
          <a href="/lists/showDetails?id=<%= element._id %>">
          <svg viewBox="0 0 28 25">
            <path d="M13.145 2.13l1.94-1.867 12.178 12-12.178 12-1.94-1.867 8.931-8.8H.737V10.93h21.339z"></path>
          </svg>
        </a>
        </div>
      </div>
    </div>

    <% }); %>


</div>